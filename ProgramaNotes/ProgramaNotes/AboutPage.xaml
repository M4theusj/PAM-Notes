<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProgramaNotes.AboutPage"
             Title="AboutPage">
    <ScrollView>
        <VerticalStackLayout Spacing="10" Padding="30">

            <Label 
                Text="Welcome to .NET MAUI!"
                HorizontalOptions="Center" />

            <HorizontalStackLayout Spacing="10">
                <Image Source="dotnet_bot.png"
                       SemanticProperties.Description="Ola!"
                       HeightRequest="64" />
                <Label FontSize="22" FontAttributes="Bold" Text="Notes"
                       VerticalOptions="End" />
                <Label FontSize="22" Text="v1.0" VerticalOptions="End" />
            </HorizontalStackLayout>

            <Label Text="Seja bem vindo" x:Name="welcomeLabel" />

            <Entry x:Name="nameEntry" Placeholder="Digite seu nome aqui" />

            <Button Text="Confirmar" Clicked="Confirm" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
